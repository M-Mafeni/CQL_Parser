{
    "name": "cql-parser",
    "version": "1.0.0",
    "description": "A library for parsing a subset of the Confluence Query Language",
    "repository": "NONE",
    "author": "Michael Mafeni",
    "license": "ISC",
    "scripts": {
        "build": "rimRaf dist && tsc",
        "debug": "npm run build && npm run watch-debug",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "serve-debug": "nodemon --inspect dist/index.js",
        "serve": "node dist/src/index.js",
        "start": "npm run serve",
        "restart": "npm run build && npm start",
        "test": "jest --forceExit",
        "watch-node": "nodemon dist/server.js",
        "watch-test": "npm run test -- --watchAll",
        "watch-ts": "tsc -w"
    },
    "dependencies": {
        "@masala/parser": "^1.0.0"
    },
    "devDependencies": {
        "@types/eslint": "7.2.6",
        "@types/jest": "26.0.20",
        "@types/node": "14.14.25",
        "@typescript-eslint/eslint-plugin": "4.14.2",
        "@typescript-eslint/parser": "4.14.2",
        "eslint": "7.19.0",
        "jest": "26.6.3",
        "nodemon": "2.0.7",
        "rimraf": "^3.0.2",
        "ts-jest": "26.5.0",
        "ts-node": "9.1.1",
        "typescript": "4.1.3"
    }
}